{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1>Contenu de l'article sur la fiche</h1>
    <form method="post" class="mt-4">

        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">
        
        <div class="form-group">
            <h2>Muscles liés à cette Fiche</h2>
            {% for muscle in muscles %}
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="{{ muscle.id }}" name="muscles[]" id="muscle_{{ muscle.id }}">
                    <label class="form-check-label" for="muscle_{{ muscle.id }}">
                        {{ muscle.nom }}
                    </label>
                </div>
            {% endfor %}
        </div>
        
        <div class="form-group mt-3">
            <label for="image1">Image1</label>
            <input type="text" name="image1" class="form-control">
        </div>

        <div class="form-group mt-3">
            <label for="contenu1">Contenu1</label>
            <textarea name="contenu1" class="form-control"></textarea>
        </div>

        <div class="form-group mt-3">
            <label for="contenu2">Contenu2</label>
            <textarea name="contenu2" class="form-control"></textarea>
        </div>

        <div class="form-group mt-3">
            <label for="image2">Image2</label>
            <input type="text" name="image2" class="form-control">
        </div>

        <div class="form-group mt-3">
            <label for="contenu3">Contenu3</label>
            <textarea name="contenu3" class="form-control"></textarea>
        </div>

        <div class="form-group mt-3">
            <label for="image3">Image3</label>
            <input type="text" name="image3" class="form-control">
        </div>

        <div class="form-group mt-3">
            <label for="etude">Étude Scientifique</label>
            <textarea name="etude" class="form-control" required></textarea>
        </div>

        <button type="submit" class="btn btn-success mt-3">Enregistrer</button>
        <a href="{{ path('fiches_index') }}" class="btn btn-secondary mt-3">Retour</a>
    </form>
</div>
{% endblock %}
